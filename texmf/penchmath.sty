%% Different Derivatives
% Ordinary Derivative
\newcommand*{\dd}[3][]{%
  \ifthenelse{\equal{#1}{}}
  {\frac{\rmd #2}{\rmd #3}}%
  {\frac{\rmd^{#1}#2}{{\rmd #3}^{#1}}}%
}

% Partial Derivative
\newcommand*{\pdd}[3][]{%
  \ifthenelse{\equal{#1}{}}
  {\frac{\partial #2}{\partial #3}}%
  {\frac{\partial^{#1} #2}{\partial #3^{#1}}}%
}


